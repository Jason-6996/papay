<%- include('includes/header') %>

  <link rel="stylesheet" type="text/css" href="/css/login.css">

  <body>
    <form class="login_container" action="/resto/sign-up" method="POST" enctype="multipart/form-data">

      <div class="login_frame" style="width: 650px; height: 730px">
        <div class="login_top">
          <span>Ro'yhatdan o'tish</span>
          <div>Bosh sahifaga qaytish
            <a href="/resto" style="color: #6440fb">Home</a>
          </div>
          <p>Ro'yhatdan allaqachon o'tganmisiz?
            <a href="/resto/login" style="color: #6440fb">Login</a>
          </p>
        </div>

        <div class="sign_input_frame">
          <div class="sign_up_frame">
            <label for="">Foydalanuvchining ismi</label>
            <input type="text" placeholder="Foydalanuvchining ismi" name="mb_nick" id="" value="" required>
          </div>
          <div class="sign_up_frame">
            <label for="">Telefon raqam</label>
            <input type="text" placeholder="Telefon raqam" name="mb_phone" required>
          </div>
        </div>


        <div class="sign_input_frame">
          <div class="sign_up_frame">
            <label for="">Password</label>
            <input type="password" placeholder="passwordni kiriting" name="mb_password" required>
          </div>
          <div class="sign_up_frame">
            <label for="">Passwordni qayta kiriting</label>
            <input type="password" placeholder="passwordni tasdiqlash" name="mb_confirm_password" required>
          </div>
        </div>

        <div class="login_input_frame">
          <div class="media-frame">
            <img class="upload_img_frame" src="/images/default_resto.jpeg" alt="">
            <div class="upload_container">
              <span class="media_text">Taom Rasmi</span>
              <div class="filebox bs3-primary preview-image">
                <input class="upload_name" value="Rasmni tanlang" disabled="disabled" type="">
                <label for="Rasmni Yuklash">Rasmni Yuklash</label>
                <input type="file" placeholder="passwordni tasdiqlash" name="restaurant_img" id="input_file"
                  class="upload-hidden form-control-file restaurant_img">
              </div>
              <p class="thumbnail_desc">
                Oshxona rasmingizni bu yerga yuklang!<br />Muhim ko'rsatmalar: .jpg, .jpeg, yoki
                .png <br />rasmda matn yo'q bo'lishi darkor!
              </p>
            </div>
          </div>
        </div>
        <button class="login_btn" name="signup" type="submit">Ro'yhatdan o'tish</button>
      </div>
    </form>
  </body>

  <%- include('includes/footer') %>